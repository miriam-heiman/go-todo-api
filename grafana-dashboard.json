{
  "title": "Go TODO API - Observability Dashboard",
  "tags": ["go-todo-api", "observability"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "type": "timeseries",
      "title": "Request Rate (requests/min)",
      "datasource": {"type": "loki", "uid": "Loki"},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(rate({container=\"go-todo-api-api-1\"} | json [1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "Requests/min",
            "axisPlacement": "auto",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {"tooltip": false, "viz": false, "legend": false},
            "lineWidth": 1,
            "scaleDistribution": {"type": "linear"}
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "type": "timeseries",
      "title": "Log Levels Over Time",
      "datasource": {"type": "loki", "uid": "Loki"},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum by (level) (rate({container=\"go-todo-api-api-1\"} | json [1m]))",
          "refId": "A",
          "legendFormat": "{{level}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "Logs/min",
            "axisPlacement": "auto",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {"tooltip": false, "viz": false, "legend": false},
            "lineWidth": 1,
            "scaleDistribution": {"type": "linear"}
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "type": "logs",
      "title": "Recent API Logs",
      "datasource": {"type": "loki", "uid": "Loki"},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "{container=\"go-todo-api-api-1\"} | json",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "type": "stat",
      "title": "Total Requests (Last 5 min)",
      "datasource": {"type": "loki", "uid": "Loki"},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({container=\"go-todo-api-api-1\"} | json [5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "justifyMode": "auto",
        "textMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      }
    },
    {
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "type": "stat",
      "title": "Error Count (Last 5 min)",
      "datasource": {"type": "loki", "uid": "Loki"},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({container=\"go-todo-api-api-1\"} | json | level=\"ERROR\" [5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "justifyMode": "auto",
        "textMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        }
      }
    },
    {
      "id": 6,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
      "type": "table",
      "title": "Recent Operations with Trace IDs",
      "datasource": {"type": "loki", "uid": "Loki"},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "{container=\"go-todo-api-api-1\"} | json | line_format \"{{.time}} | {{.msg}} | TraceID: {{.trace_id}}\"",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "footer": {
          "show": false,
          "reducer": ["sum"],
          "fields": ""
        }
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line",
            "format": "auto"
          }
        }
      ]
    }
  ],
  "time": {"from": "now-15m", "to": "now"},
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  },
  "uid": "go-todo-api",
  "editable": true
}
